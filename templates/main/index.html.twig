{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ asset('assets/img/4.jpg') }}" class="d-block w-100" alt="">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('assets/img/5.jpeg') }}" class="d-block w-100" alt="">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('assets/img/4.jpg') }}" class="d-block w-100" alt="">
            </div>
        </div>
    </div>
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>Site e-commerce</h1>
                <p>Bienvenue dans notre boutique</p>
            </div>
            {% for category in categories %}
                {% if category.parent == null %}
                    <div class="col-12">
                        <h2>{{ category.name }}</h2>
                    </div>
                {% else %}
                    <div class="col-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ category.name }}</h5>
                                <a href="{{ path('categories_list',{slug : category.slug}) }}" class="btn btn-primary">Voir
                                    les produits</a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </section>
    </main>
{% endblock %}